#!/usr/bin/env node
var path = require('path');
var fs = require('fs');
var lib = path.join(path.dirname(fs.realpathSync(__filename)), '../lib');
var service = require(lib + "/node-service");
var i = 0;
var settings = {
	name: "",
	run: "/dev/null",
	args: []
}
var action = "";
process.argv.forEach(function(arg) {
	if(i == 2) {
		action = arg;
	}
	if(i == 3) {
		settings.name = arg;
	}
	if(i == 4) {
		settings.run = arg;
	}
	if(i > 5) {
		settings.args.push(arg);
	}
	i++;
});
var svc = new service.Service(settings);
switch(action) {
	case "install":
		svc.install();
		break;
	case "uninstall":
		svc.uninstall();
		break;
	default:
		console.log("Invalid parameters!");
}